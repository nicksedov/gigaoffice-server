# Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/gigaoffice
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_REQUESTS=chart-requests
KAFKA_TOPIC_RESPONSES=chart-responses
KAFKA_TOPIC_DLQ=chart-dlq
KAFKA_CONSUMER_GROUP=chart-processors
MAX_QUEUE_SIZE=1000
MAX_PROCESSING_TIME=300

# GigaChat AI Configuration
GIGACHAT_CLIENT_ID=your_gigachat_client_id
GIGACHAT_CLIENT_SECRET=your_gigachat_client_secret
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_AUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=gigaoffice:
REDIS_DEFAULT_TTL=3600

# API Configuration
PORT=8000
HOST=0.0.0.0
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/gigaoffice.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Performance Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=300

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=7
HEALTH_CHECK_INTERVAL=30

# Chart Generation Configuration
DEFAULT_CHART_WIDTH=600
DEFAULT_CHART_HEIGHT=400
MAX_CHART_WIDTH=2000
MAX_CHART_HEIGHT=1500
MAX_DATA_ROWS=10000
MAX_DATA_COLUMNS=50

# Development Configuration
DEBUG=false
RELOAD=false
WORKERS=4

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/gigaoffice.crt
SSL_KEY_PATH=/etc/ssl/private/gigaoffice.key

# External Services
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3